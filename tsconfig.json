{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-native",
    "target": "es6",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/react-navigation.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
